generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id   String @id @default(uuid())
  name String
}

model CareHome {
  id         String   @id @default(uuid())
  name       String
  address    String
  totalRooms Int
  createdBy  String
  createdAt  DateTime @default(now())

  units    Unit[]
  managers Manager[]
}

model Unit {
  id         String   @id @default(uuid())
  name       String
  careHomeId String
  careHome   CareHome @relation(fields: [careHomeId], references: [id])

  nurses    Nurse[]
  residents Resident[]
  careStaff CareStaff[]
}

model Manager {
  id        String @id @default(uuid())
  firstName String
  lastName  String
  role      String

  careHomeId String
  careHome   CareHome @relation(fields: [careHomeId], references: [id])
}

model Nurse {
  id       String @id @default(uuid())
  name     String
  email    String
  password String

  unitId String
  unit   Unit   @relation(fields: [unitId], references: [id])
}

model CareStaff {
  id       String @id @default(uuid())
  name     String
  email    String
  password String

  unitId String
  unit   Unit   @relation(fields: [unitId], references: [id])
}

model Resident {
  id          String @id @default(uuid())
  name        String
  dateOfBirth String
  roomNumber  Int
  nextOfKin   String

  unitId String
  unit   Unit   @relation(fields: [unitId], references: [id])
}
